<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:id="@+id/root_list_item">


    <ImageView
        android:id="@+id/img_list_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_list_item_date"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_date"
        app:layout_constraintRight_toLeftOf="@+id/created_list_item"
        app:layout_constraintTop_toTopOf="@+id/created_list_item"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/created_list_item"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        style="@style/Text.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/created_list_item"
        tools:text="22/05/2017 21:33"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_list_item"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/title_list_item"
        style="@style/Text.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/img_list_item"
        tools:text="Titulo"
        app:layout_constraintTop_toTopOf="@+id/img_list_item"
        android:layout_marginTop="-4dp" />

    <TextView
        style="@style/Text.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_list_item"
        tools:text="Descripcion del elemento"
        app:layout_constraintLeft_toRightOf="@+id/img_list_item"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title_list_item"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_list_item"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>